@model prjShopping.Models.tAdmin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理者</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        body {
            width:100%;
            height:100%;
            padding:0;
            margin:0;
            background:url("/Images/bg-star.jpg");
            background-size:cover;
            background-attachment:fixed;
            background-position:center;
        }
        .login {
            position: fixed;
            left: 50%;
            top: 50%;
            transform:translate(-50%,-50%);
            background:rgba(0,0,0,5);
            text-align:center;
            color:#fff;
            font-family:"微軟正黑體",sans-serif;
            border-radius:10px;
            padding:30px;
        }
        input[type="text"],input[type="password"]{
            font-size:16px;
            font-family:"微軟正黑體",sans-serif;
            padding:5px;
            border-radius:4px;
            margin:0 auto;
            display:block;
            width:100%;
        }
        button{
            border:0;
            padding:6px 8px;
            margin:20px auto;
            font-size:18px;
            font-family:"微軟正黑體",sans-serif;
            background:#fff;
            color:black;
        }        

    </style>

</head>
<body>
    <form action="@Url.Action("Login")" class="login" method="post">
        <h1>登入</h1>
        <i class="glyphicon glyphicon-user"></i>
        <h2>帳號</h2>
        <input type="text" placeholder="請輸入帳號" id="fUId" name="fUId" />
        <h2>密碼</h2>
        <input type="password" placeholder="請輸入密碼" id="fPwd" name="fPwd"/>
        <button type="submit">登入</button>
        @if (ViewBag.Msg != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Msg
            </div>
        }
    </form>
   
</body>
</html>
